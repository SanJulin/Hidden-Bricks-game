{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/*"],
      "@items/*": ["src/*"],
      "@themes/*": ["src/*"],
      "@computers/*": ["src/*"],
      "@computerrows/*": ["src/*"],
      "@games/*": ["src/*"],
      "@index/*": ["src/*"],
      "@gameuis/*": ["src/*"],
      "@gameboards/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
